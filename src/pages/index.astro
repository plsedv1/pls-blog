// index.astro – PLS EDV (Philipp Leser)
import Layout from '../layouts/Layout.astro';

const site = {
  name: "PLS EDV – Philipp Leser",
  email: "pl@pls-edv.de",
  phone: "+49 4183 7979004",
  url: "https://www.pls-edv.de"
};

// 3 neueste Projekte aus Markdown
const latestProjects = (await Astro.glob('./projekte/*.md'))
  .sort((a, b) => +new Date(b.frontmatter?.pubDate ?? 0) - +new Date(a.frontmatter?.pubDate ?? 0))
  .slice(0, 3);

// 3 neueste Blog-Beiträge via WP REST API
const WP_BASE = 'https://blog.pls-edv.de';
const API_URL = `${WP_BASE}/wp-json/wp/v2/posts?_embed=1&per_page=3&status=publish`;

let blogPosts: any[] = [];
try {
  const res = await fetch(API_URL);
  if (res.ok) {
    blogPosts = await res.json();
  }
} catch (e) {
  console.error("Fehler beim Laden der Blogposts:", e);
}
